---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import GridServicesCard from "../components/grids/GridServicesCard.astro";
import GridClients from "../components/grids/GridClients.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <SectionContainer backGroundColor="bg-green-100">
      <div class="flex gap-x-32">
        <section class="w-6/12 space-y-10 mt-10">
          <h1 class="font-bold text-3xl sm:text-5xl">
            Impresión y Personalización de Calidad
          </h1>
          <h3 class="text-xl text-black/90">
            MaxPrint ofrece servicios de estampado, uniformes y gorras
            personalizados para tu negocio o evento.
          </h3>
          <button
            type="button"
            class="text-white bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2"
            >Contáctanos</button
          >
        </section>
        <section class="relative">
          <div
            class="bg-gradient-to-r from-transparent to-black/60 p-4 rounded-xl overflow-hidden shadow-sm"
          >
            <img
              src="/commercial/shirtInformation.webp"
              width="600px"
              class="rounded-lg"
            />
          </div>
        </section>
      </div>
    </SectionContainer>
    <SectionContainer backGroundColor="bg-gray-50">
      <div class="flex flex-col justify-center items-center space-y-2">
        <h2 class="text-3xl font-bold">Nuestros Servicios</h2>
        <h3>
          Ofrecemos una amplia gama de servicios de impresión y personalización
          para satisfacer todas tus necesidades.
        </h3>
      </div>
      <section class="mt-10"><GridServicesCard /></section>
    </SectionContainer>
    <SectionContainer backGroundColor="bg-white">
      <div class="flex flex-col justify-center items-center space-y-2">
        <h2 class="text-3xl font-bold">Testimonios de Clientes</h2>
        <h3>Lo Que Dicen Nuestros Clientes</h3>
      </div>
      <section class="flex justify-center mt-5">
        <GridClients/>
      </section>

    </SectionContainer>
  </main>
</Layout>
